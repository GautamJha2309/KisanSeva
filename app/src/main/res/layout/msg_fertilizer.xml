<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_light_background"
    android:padding="20dp" android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/fName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="textview"
            android:textColor="#0E3A10"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/fImage"
            android:layout_width="138dp"
            android:layout_height="103dp"
            android:layout_weight="1"
            android:contentDescription="todo"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/fNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textColor="#DF8A0B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fName" />

        <TextView
            android:id="@+id/fCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textview"
            android:textColor="#478005"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fNumber" />

        <View
            android:id="@+id/divider"
            android:layout_width="398dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
</androidx.cardview.widget.CardView>